homebrew-update:
    #!/bin/bash
    brew update
    brew upgrade
    brew cleanup

homebrew-packages:
    #!/bin/bash
    BREW_LIST="$(curl https://raw.githubusercontent.com/emblem-66/bootc-config/refs/heads/main/brew-packages | tr '\n' ' ')"
    brew install ${BREW_LIST}
